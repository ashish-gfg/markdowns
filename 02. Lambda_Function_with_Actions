      "source": [
        "# Create a sample DataFrame\n",
        "data = {'col1': [10, 20, 30, 40, 50],\n",
        "        'col2': ['A', 'B', 'C', 'D', 'E'],\n",
        "        'col3': [100, 200, 150, 250, 300]}\n",
        "df = pd.DataFrame(data)\n",
        "print(\"Original DataFrame:\")\n",
        "display(df)\n",
        "\n",
        "# Use apply with a lambda function on a specific column ('col1')\n",
        "# Apply a calculation (e.g., add 5 to each element in 'col1')\n",
        "df['col1_transformed'] = df['col1'].apply(lambda x: x + 5)\n",
        "\n",
        "# Use apply with a lambda function on another column ('col2')\n",
        "# Format the string column\n",
        "df['col2_formatted'] = df['col2'].apply(lambda x: f\"ID_{x}\")\n",
        "\n",
        "print(\"\\nDataFrame after applying lambda functions to columns:\")\n",
        "display(df)"
      ],
