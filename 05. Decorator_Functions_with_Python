      "source": [
        "import functools\n",
        "\n",
        "# 1. Define a simple function with metadata\n",
        "def my_function():\n",
        "    \"\"\"This is the docstring for my_function.\"\"\"\n",
        "    print(\"Executing my_function\")\n",
        "\n",
        "print(\"Original function metadata:\")\n",
        "print(f\"Name: {my_function.__name__}\")\n",
        "print(f\"Docstring: {my_function.__doc__}\")\n",
        "\n",
        "# 2. Define a basic decorator *without* functools.wraps\n",
        "def basic_decorator_without_wraps(func):\n",
        "    def wrapper_without_wraps():\n",
        "        \"\"\"This is the wrapper docstring.\"\"\"\n",
        "        print(\"Something is happening before.\")\n",
        "        func()\n",
        "        print(\"Something is happening after.\")\n",
        "    return wrapper_without_wraps\n",
        "\n",
        "# 3. Apply the basic decorator\n",
        "@basic_decorator_without_wraps\n",
        "def decorated_function_without_wraps():\n",
        "    \"\"\"This is the docstring for decorated_function_without_wraps.\"\"\"\n",
        "    print(\"Executing decorated_function_without_wraps\")\n",
        "\n",
        "print(\"\\nDecorated function metadata (without wraps):\")\n",
        "print(f\"Name: {decorated_function_without_wraps.__name__}\")\n",
        "print(f\"Docstring: {decorated_function_without_wraps.__doc__}\")\n",
        "\n",
        "# 4. Define the same decorator *with* functools.wraps\n",
        "def basic_decorator_with_wraps(func):\n",
        "    @functools.wraps(func) # Apply functools.wraps here\n",
        "    def wrapper_with_wraps(*args, **kwargs): # Use *args, **kwargs for flexibility\n",
        "        \"\"\"This is the wrapper docstring (will be overwritten).\"\"\"\n",
        "        print(\"Something else is happening before.\")\n",
        "        result = func(*args, **kwargs)\n",
        "        print(\"Something else is happening after.\")\n",
        "        return result # Return the result\n",
        "\n",
        "    return wrapper_with_wraps\n",
        "\n",
        "# 5. Apply the new decorator\n",
        "@basic_decorator_with_wraps\n",
        "def decorated_function_with_wraps():\n",
        "    \"\"\"This is the docstring for decorated_function_with_wraps.\"\"\"\n",
        "    print(\"Executing decorated_function_with_wraps\")\n",
        "\n",
        "print(\"\\nDecorated function metadata (with wraps):\")\n",
        "print(f\"Name: {decorated_function_with_wraps.__name__}\")\n",
        "print(f\"Docstring: {decorated_function_with_wraps.__doc__}\")\n",
        "\n",
        "# Execute the decorated functions to show they work\n",
        "print(\"\\nExecuting decorated functions:\")\n",
        "decorated_function_without_wraps()\n",
        "decorated_function_with_wraps()"
