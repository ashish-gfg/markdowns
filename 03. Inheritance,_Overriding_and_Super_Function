      "source": [
        "# Example 12 (Continued): Using super() with Abstract Base Classes (if needed)\n",
        "# In this simple case, super() isn't strictly necessary for speak,\n",
        "# but you could use it if the abstract method had some base implementation\n",
        "# or if you were calling other methods in the hierarchy.\n",
        "\n",
        "import abc # Import the abc module\n",
        "\n",
        "class AnotherAbstractAnimal(abc.ABC):\n",
        "    @abc.abstractmethod\n",
        "    def greet(self):\n",
        "        pass\n",
        "\n",
        "    def common_greeting_part(self):\n",
        "        print(\"Hello from an animal...\")\n",
        "\n",
        "class FriendlyDog(AnotherAbstractAnimal):\n",
        "    def greet(self):\n",
        "        self.common_greeting_part() # Call a non-abstract method from the ABC\n",
        "        print(\"...specifically, a friendly dog!\")\n",
        "\n",
        "friendly_dog = FriendlyDog()\n",
        "friendly_dog.greet()\n",
